@model IEnumerable<Bai4_lab1.Models.Course>

@{
    ViewBag.Title = "Mine";
}

<h2>Mine</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Date Time
        </th>
        <th>
           Lecturer
        </th>
        <th>
            Course
        </th>
        <th>
           Action
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.DateTime
        </td>
        <td>
            @item.LecturerId
        </td>
        <td>
            @item.Category.Name
        </td>
        <td>
            <a href="#">Edit</a> |
            <a id="@item.Id" href="#" class="delete">Delete</a>
        </td>
    </tr>
}

</table>
