@model IEnumerable<Bai4_lab1.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Time
        </th>
        <th>
           Sourse
        </th>
        <th>
            Place
        </th>

        <th>
            Lecturer
        </th>
        <th>
            Going
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @item.DateTime
    </td>
    <td>
        @item.Category.Name
    </td>
    <td>
       @item.Place
    </td>
    <td>
        @item.LecturerId
        @if (item.isLogin)
        {
            if (item.isFollowing)
            {
                <button id="@item.Id" class="btn btn-default btn-sm js-tongle-follow">Follow</button>
            }
            else
            {
                <button id="@item.Id" class="btn btn-success btn-sm js-tongle-follow">Following</button>
            }
        }



    </td>
    <td>
        @if (item.isLogin)
        {
            if (item.isGoing)
            {
                <button id="@item.Id" class="btn btn-default btn-sm js-tongle-attendance">Going ?</button>
            }
            else
            {
                <button id="@item.Id" class="btn btn-success btn-sm js-tongle-attendance">Going</button>
            }
        }

    </td>
</tr>
}

</table>

@section scripts{
    <script>
        $(function () {
            $('.js-tongle-attendance').click(function (e) {
                var button = $(e.target);
                $.ajax({
                    type: "GET",
                    url: "../api/Attendances",
                    data: { 'id': $(this).attr("id") },
                    success: function (dt) {
                        if (dt == "add") {
                            button
                                .removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Going");
                        }else{
                            button
                                .removeClass("btn-info btn-success")
                                .addClass("btn-default")
                                .text("Going ?");
                        }
                    },
                    error: function (er) {
                        alert(er.responseText)
                    }
                })
            });


            $('.js-tongle-follow').click(function (e) {
                var button = $(e.target);
                 $.ajax({
                    type: "GET",
                    url: "../api/Following",
                    data: { 'id': $(this).attr("id") },
                    success: function (dt) {
                        if (dt == "add") {
                            button
                                .removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Unfollow");
                        } else {
                            button
                                .removeClass("btn-info btn-success")
                                .addClass("btn-default")
                                .text("Follow");
                        }
                    },
                    error: function (er) {
                        alert("error")
                    }
                })
            });
        });
    </script>
    }